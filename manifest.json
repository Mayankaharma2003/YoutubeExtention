{
    "manifest_version": 3,
    "name": "yourtube",
    "version": "1.0",
    "description": "A Chrome extension that provides personalized video recommendations",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://*.(youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "permissions": ["activeTab", "storage", "https://www.googleapis.com/*"]
  }